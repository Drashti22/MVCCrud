@model MvcPractical.Models.User

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            Last Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Mobile No
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MobileNo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt>
            Country
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Country.CountryName)
        </dd>
        <dt>
            State
        </dt>
        <dd>
            @Html.DisplayFor(model => model.State.StateName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt>
            Known Language
        </dt>
        <dd>
            @Html.DisplayFor(model => model.KnownLanguage)
        </dd>
        <dt>
            Photo
        </dt>

        <dd>
            @if (!string.IsNullOrEmpty(Model.PhotoUrl))
            {
                <img src="@Url.Content(Model.PhotoUrl)" alt="User Photo" style="width: 100px; height: auto;" />
            }
            else
            {
                <img src="~/Uploads/No photo.png" alt="Default Photo" class="img-thumbnail mt-2 photoPreview" style="width: 100px; height: auto;" />
            }
        </dd>
    </dl>
</div>
<p>
    <div class="mt-2 btn btn-outline-secondary"
         onmouseover="this.querySelector('a').style.color='white';"
         onmouseout="this.querySelector('a').style.color='inherit';">
        @Html.ActionLink("Edit", "Edit", null, new { id = Model.ID }, new { @class = "text-decoration-none", style = "color: inherit;" }) 
    </div>
    <div class="mt-2 btn btn-outline-danger"
         onmouseover="this.querySelector('a').style.color='white';"
         onmouseout="this.querySelector('a').style.color='inherit';">
         @Html.ActionLink("Delete", "Delete", null,  new { id = Model.ID }, new { @class = "text-decoration-none", style = "color: inherit;" })
    </div>
    <div class="mt-2 btn btn-outline-primary"
         onmouseover="this.querySelector('a').style.color='white';"
         onmouseout="this.querySelector('a').style.color='inherit';">
        @Html.ActionLink("User List", "Index", null, new { @class = "text-decoration-none", style = "color: inherit;" })
    </div>
</p>
